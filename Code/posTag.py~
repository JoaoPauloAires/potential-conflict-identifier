import nltk
from normClassifier import *

posTagList = file('posTagList.txt', 'w')
sentList = open('sentList.txt', 'r')
sents = sentList.read();
tokenizer = nltk.data.load('tokenizers/punkt/english.pickle')
sents = tokenizer.tokenize(sents)
classifier = start()
listTagged = [];
def posTagging():
    for sent in sents:
        if classifier(feature(sent)) == "norm":
            words = nltk.word_tokenize(sent)
            posTag = nltk.pos_tag(words)
            listTagged.append(posTag);
        else:
            print sent
    writeFile(listTagged)

def writeFile(array):
    for sent in array:
        posTagList.write(" ".join(word+"/"+tag for word, tag in sent))
        posTagList.write("\n");
        posTagList.write("\n");

posTagging()
